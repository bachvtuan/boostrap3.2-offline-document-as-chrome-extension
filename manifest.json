{
  "manifest_version": 2,
  "name": "Bootstrap3.2 document",
  "description": "The offline document for bootstrap 3.2",
  "version": "1.0",
  "browser_action": {
    "default_title": "Bootstrap3.2 document",
    "default_icon": "images/icon64.png"
  },
  "background" : { "scripts": ["background.js"] },
  "permissions" : [
    "contextMenus"
   ],
  "content_security_policy": "script-src 'self'  https://signup.leagueoflegends.com/; object-src 'self'",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png"
  }
}
